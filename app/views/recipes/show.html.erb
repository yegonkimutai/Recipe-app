<h1><%= @recipe.name%></h1>

<div class="container">
  <div class="row">
    <div class="row">
    <p>Preparation time: <%= @recipe.preparation%></p>
    <p>Cooking time: <%= @recipe.cooking%></p>
    <p>Description: <%= @recipe.desc%></p>
    <%= button_to(@recipe.public? ? "Privatize" : "Publish", toggle_public_recipe_path(@recipe), method: :put, class: "btn btn-info b-public") %>
    
    <% if @recipe.user_id == current_user.id %>
      <button class="add-ingredient"><%= link_to 'Add Ingredient', "/recipes/#{@recipe.id}/recipes_foods/new" %></button>
    <% end %>

    </div>
    <div class="row">
    <% if @foods.length.positive?%>
    <table class="foods__table">
      <tr class="foods__table-header-row">
        <th>Food</th>
        <th>Quantity</th>
        <th>Measurement Unit</th>
        <th>Unit Price</th>
        <th>Actions</th>
      </tr>
      <tbody>
        <% @foods.each do |food|  %>
          <tr id="<%= dom_id food %>", class="foods__table-body-row">
            <td><%= food.name %></td>
            <td><%= food.quantity%></td>
            <td><%= food.measurement_unit%></td>
            <td><%= food.price%></td>
            <td><%= button_to "delete", food_path(food.id), method: :delete %></td>
          </tr>
        <% end %>
      <tbody>
    </table>

  <% else %>
    <p>No foods to show. Add a food from the button above</p>
  <% end %>
    </div>
  </div>
</div>


