<h1><%= @recipe.name%></h1>
<p>Preparation time: <%= @recipe.preparation%></p>
<p>Cooking time: <%= @recipe.cooking%></p>
<p>Description: <%= @recipe.desc%></p>
<%= button_to(@recipe.public? ? "Privatize" : "Publish", toggle_public_recipe_path(@recipe), method: :put) %>

<button class="foods__add-food-btn"><%= link_to 'Add Food', '/recipes/_form' %></button>

<% if @foods.length.positive?%>
    <table class="foods__table">
      <tr class="foods__table-header-row">
        <th>Food</th>
        <th>Quantity</th>
        <th>Measurement Unit</th>
        <th>Unit Price</th>
        <th>Actions</th>
      </tr>
      <tbody>
        <% @foods.each do |food|  %>
          <tr id="<%= dom_id food %>", class="foods__table-body-row">
            <td><%= food.name %></td>
            <td><%= food.quantity%></td>
            <td><%= food.measurement_unit%></td>
            <td><%= food.price%></td>
            <td><%= button_to "delete", destroy_food_recipe_path(@recipe, food), method: :delete %></td>
          </tr>
        <% end %>
      <tbody>
    </table>

  <% else %>
    <p>No foods to show. Add a food from the button above</p>
  <% end %>