<% if @recipes_foods.errors.any? %>
  <div>
    <p><%= pluralize(@recipes_foods.errors.count, "error") %> found:</p>

    <ul>
      <% @recipes_foods.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

<%= form_with model: @recipes_foods, url: "/recipes/#{params[:recipe_id]}/recipes_foods", method: :post do |form| %>
<h1>Add Ingredient for <%= @recipe_name %></h1>
<div class="d-flex flex-column mb-3">
<div class="col">
<%= form.label :quantity %>
<%= form.number_field :quantity %>
</div>
<div class="col">
<%= form.label :food_id%>
<%= form.select :food_id, Food.all.map {|f| [f.name, f.id]} %>
</div>
<div class="col">
<%= form.submit 'Add Ingredient', class: "btn btn-primary" %>
</div>
<% end %>