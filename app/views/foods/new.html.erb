<h1>Add new food</h1>
<% if @food.errors.any? %>
  <div class="post-errors-box">
    <p><%= pluralize(@food.errors.count, "error") %> found:</p>

    <ul class="food-errors-ul">
      <% @food.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

<%= form_with path: new_food_path, model: @food, method: :post do |form| %>
<%= form.label :name%>
<%= form.text_field :name%>
<br>
<%= form.label :measurement_unit%>
<%= form.text_field :measurement_unit%>
<br>
<%= form.label :price%>
<%= form.text_field :price%>
<br>
<%= form.label :quantity%>
<%= form.number_field :quantity%>
<%= form.submit %>
<% end %>